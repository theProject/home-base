{
  "compilerOptions": {
    "baseUrl": ".", // This is important for paths to work correctly
    "paths": {
      "@/*": [
        "./app/*"
      ],
      // Add this line for Payload config:
      "@payload-config": ["./payload.config.ts"],
      "@payload-types": ["./payload-types.ts"]
    },
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "target": "ES2022" // Added this based on common Next.js setups, adjust if needed
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "payload.config.ts" // Good to explicitly include your payload config here too
  ],
  "exclude": [
    "node_modules"
  ]
}